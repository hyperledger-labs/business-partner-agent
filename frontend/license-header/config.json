{
  "ignore": [
    "**/*.md",
    "**/*.svg",
    "license-header/license-header",
    "licenses/attribution.txt",
    ".husky/_/**/*"
  ],
  "license": "license-header/license-header",
  "regexIdentifier": "_!##",
  "defaultFormat": {
    "eachLine": {
      "prepend": "# "
    }
  },
  "licenseFormats": {
    "js|ts|css|scss": {
      "prepend": "/*",
      "append": " */",
      "eachLine": {
        "prepend": " * "
      }
    },
    "vue|html|xml": {
      "prepend": "<!--",
      "append": "-->",
      "eachLine": {
        "prepend": " "
      }
    },
    "gitignore|npmignore|eslintignore|dockerignore|sh|dotfile|^Dockerfile|^.env|npmrc": {
      "eachLine": {
        "prepend": "# "
      }
    }
  },
  "trailingWhitespace": "TRIM"
}
